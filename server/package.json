{
  "name": "zombie-defense-server",
  "version": "1.0.0",
  "description": "2D Multiplayer Zombie Defense Game Server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:client": "cd ../client && npm run build && cd ../server",
    "build:all": "npm run build:client && npm run build",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\""
  },
  "dependencies": {
    "socket.io": "^4.7.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/express": "^4.17.17",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6"
  }
}